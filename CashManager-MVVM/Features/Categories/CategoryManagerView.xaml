<UserControl
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:model="clr-namespace:CashManager_MVVM.Model"
        xmlns:dd="urn:gong-wpf-dragdrop"
        xmlns:properties="clr-namespace:CashManager_MVVM.Properties"
        x:Class="CashManager_MVVM.Features.Categories.CategoryManagerView"
        mc:Ignorable="d"
        MinHeight="200" MinWidth="400" d:DataContext="{d:DesignData CategoryManagerViewModel}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Grid.Column="0" Text="{Binding Input}" Margin="5" AcceptsReturn="True" />
        <Button Grid.Row="0" Grid.Column="1" Content="{x:Static properties:Strings.Add}" Width="120" Command="{Binding AddCategoryCommand}" />
        <Button Grid.Row="0" Grid.Column="2" Content="{x:Static properties:Strings.Remove}" Width="120" Command="{Binding RemoveCategoryCommand}" />
        <Button Grid.Row="0" Grid.Column="3" Content="{x:Static properties:Strings.Load}" Width="120" ToolTip="{x:Static properties:Strings.LoadContentAsTree}" Command="{Binding LoadCategoriesCommand}" />
        <TreeView Grid.Row="1" Margin="5,10" Grid.ColumnSpan="4" Grid.Column="0"
                  ItemsSource="{Binding Categories}"
                  dd:DragDrop.IsDropTarget="True" dd:DragDrop.IsDragSource="True"  
                  dd:DragDrop.DropHandler="{Binding}">
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type model:ExpandableCategory}" ItemsSource="{Binding Children}" >
                    <StackPanel Orientation="Horizontal" >
                        <TextBlock Text="{Binding Name}" />
                        <TextBlock Text=" (" Foreground="{StaticResource HoverBorderAccentBrush}" />
                        <TextBlock Text="{Binding Children.Count}" Foreground="{StaticResource HoverBorderAccentBrush}" />
                        <TextBlock Text=")" Foreground="{StaticResource HoverBorderAccentBrush}" />
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.Resources>
            <TreeView.Background>
                <StaticResource ResourceKey="ControlBackgroundBrush"/>
            </TreeView.Background>
            <TreeView.ItemContainerStyle>
                <Style TargetType="{x:Type TreeViewItem}">
                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                    <Setter Property="FontWeight" Value="Normal" />
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="FontWeight" Value="Bold" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TreeView.ItemContainerStyle>
        </TreeView>
    </Grid>
</UserControl>
