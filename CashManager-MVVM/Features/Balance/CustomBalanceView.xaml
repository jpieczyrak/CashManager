<UserControl x:Class="CashManager_MVVM.Features.Balance.CustomBalanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CashManager_MVVM.Features.Balance"
             xmlns:common="clr-namespace:CashManager_MVVM.Features.Common"
             xmlns:properties="clr-namespace:CashManager_MVVM.Properties"
             mc:Ignorable="d"
             d:DesignHeight="250" d:DesignWidth="600"
             d:DataContext="{d:DesignInstance Type=local:CustomBalanceViewModel, IsDesignTimeCreatable=True}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <common:DateRangePicker Grid.Row="0" DateFrame="{Binding DateFilter}"/>

        <DataGrid Grid.Row="1" ItemsSource="{Binding SelectedSearchSummary, Mode=OneWay}" 
                  Margin="5" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{x:Static properties:Strings.Name}" Binding="{Binding Name, Mode=OneWay}" Width="*" />
                <DataGridTextColumn Header="{x:Static properties:Strings.Income}" Binding="{Binding GrossIncome, Mode=OneWay, StringFormat={x:Static properties:Strings.ValueFormat}}" Width="*" />
                <DataGridTextColumn Header="{x:Static properties:Strings.Outcome}" Binding="{Binding GrossOutcome, Mode=OneWay, StringFormat={x:Static properties:Strings.ValueFormat}}" Width="*" />
                <DataGridTextColumn Header="{x:Static properties:Strings.Balance}" Binding="{Binding GrossBalance, Mode=OneWay, StringFormat={x:Static properties:Strings.ValueFormat}}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Margin="5" Text="{Binding Name}" VerticalAlignment="Bottom" Height="25" />
            <ComboBox Grid.Column="1" Margin="5" ItemsSource="{Binding CustomBalances}" DisplayMemberPath="Name" SelectedValue="{Binding SelectedCustomBalance}" VerticalAlignment="Bottom" Height="25" />
            <UserControl Grid.Column="2" Margin="5" Content="{Binding SavedSearches}" VerticalAlignment="Bottom" />
            <Button Grid.Column="3" Margin="5" Content="{x:Static properties:Strings.Delete}" Command="{Binding DeleteCommand}" VerticalAlignment="Bottom" Height="25" />
            <Button Grid.Column="4" Margin="5" Content="{x:Static properties:Strings.Save}" Command="{Binding SaveCommand}" VerticalAlignment="Bottom" Height="25" />
        </Grid>
    </Grid>
</UserControl>