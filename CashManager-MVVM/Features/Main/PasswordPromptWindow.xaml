<Window x:Class="CashManager_MVVM.Features.Main.PasswordPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Properties="clr-namespace:CashManager_MVVM.Properties"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="{x:Static Properties:Strings.Password}" Height="150" Width="250" Background="{DynamicResource BackgroundColorBrush}">

    <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="5">
        <TextBlock Text="{x:Static Properties:Strings.PleaseEnterPassword}" VerticalAlignment="Center" Margin="5" HorizontalAlignment="Center"/>
        <PasswordBox VerticalAlignment="Center" Margin="5" PasswordChanged="PasswordBox_PasswordChanged"/>
        <Button Content="{x:Static Properties:Strings.Ok}" Margin="5" Click="OkButtonClick"/>
    </StackPanel>
</Window>
