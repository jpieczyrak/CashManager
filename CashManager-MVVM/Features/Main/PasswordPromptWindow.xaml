<Window x:Class="CashManager_MVVM.Features.Main.PasswordPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CashManager_MVVM.Features.Main"
        mc:Ignorable="d"
        Title="Password" Height="150" Width="250" Background="{DynamicResource BackgroundColorBrush}">

    <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="5">
        <TextBlock Text="Please enter password" VerticalAlignment="Center" Margin="5" HorizontalAlignment="Center"/>
        <TextBox x:Name="PasswordTextBox" VerticalAlignment="Center" Margin="5"/>
        <Button Content="Ok" Margin="5" Click="Button_Click"/>
    </StackPanel>
</Window>
