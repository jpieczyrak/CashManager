<UserControl x:Class="CashManager_MVVM.Features.Transactions.TransactionSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CashManager_MVVM.Features.Transactions"
             xmlns:model="clr-namespace:CashManager_MVVM.Model"
             xmlns:filters="clr-namespace:CashManager_MVVM.Model.Filters"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=local:TransactionSearchViewModel, IsDesignTimeCreatable=True}">

    <UserControl.Resources>
        <DataTemplate DataType="{x:Type filters:TimeFrame}">
            <Border BorderThickness="1" CornerRadius="5" BorderBrush="#4F4F4F4F" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Separator Grid.Column="0" Margin="5,0"/>
                        <TextBlock Grid.Column="1" Text="{Binding Description}" TextAlignment="Center" HorizontalAlignment="Center" FontSize="10" FontStyle="Italic" Foreground="#FF4F4F4F" FontWeight="Bold" />
                        <Separator Grid.Column="2" Margin="5,0"/>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="0" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Separator Grid.Column="0" Margin="5,0"/>
                        <TextBlock Grid.Column="1" Text="From" TextAlignment="Center" HorizontalAlignment="Center" FontSize="10" FontStyle="Italic" Foreground="#FF4F4F4F" />
                        <Separator Grid.Column="2" Margin="5,0"/>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="1" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Separator Grid.Column="0" Margin="5,0"/>
                        <TextBlock Grid.Column="1" Text="To" TextAlignment="Center" HorizontalAlignment="Center" FontSize="10" FontStyle="Italic" Foreground="#FF4F4F4F" />
                        <Separator Grid.Column="2" Margin="5,0"/>
                    </Grid>

                    <DatePicker Grid.Row="2" Grid.Column="0" Margin="5" FirstDayOfWeek="Monday" SelectedDate="{Binding From}" />
                    <DatePicker Grid.Row="2" Grid.Column="1" Margin="5" FirstDayOfWeek="Monday" SelectedDate="{Binding To}" />
                    <CheckBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="5,2" Content="Enabled" IsChecked="{Binding IsChecked}" HorizontalAlignment="Center"/>
                </Grid>
            </Border>
        </DataTemplate>
        <DataTemplate DataType="{x:Type filters:MultiPicker}">
            <Border BorderThickness="1" CornerRadius="5" BorderBrush="#4F4F4F4F" Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Separator Grid.Column="0" Grid.Row="0" Margin="5,0"/>
                    <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding Description}" TextAlignment="Center" HorizontalAlignment="Center" FontSize="10" FontStyle="Italic" Foreground="#FF4F4F4F" FontWeight="Bold" />
                    <Separator Grid.Column="2" Grid.Row="0" Margin="5,0"/>
                    <UserControl Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Margin="5" Content="{Binding ComboBox}"/>
                    <CheckBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="5,2" Content="Enabled" IsChecked="{Binding IsChecked}" HorizontalAlignment="Center"/>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- search -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBox Grid.Row="0" Grid.Column="1" />
            <TextBox Grid.Row="1" Grid.Column="1" />
            <TextBox Grid.Row="2" Grid.Column="1" />
            <UserControl Grid.Row="3" Grid.Column="0" Content="{Binding CreateDate}" />
            <UserControl Grid.Row="3" Grid.Column="1" Content="{Binding BookDate}" />
            <UserControl Grid.Row="3" Grid.Column="2" Content="{Binding LastEditDate}" />
            <UserControl Grid.Row="4" Grid.Column="0" Content="{Binding UserStocks}" />
            <UserControl Grid.Row="4" Grid.Column="1" Content="{Binding ExternalStocks}" />
            <UserControl Grid.Row="5" Grid.Column="1" Content="{Binding Categories}" />

        </Grid>

        <UserControl Grid.Row="1" Content="{Binding TransactionsListViewModel}" />

        <!-- Summary -->
        <Grid Grid.Row="2">

        </Grid>
    </Grid>
</UserControl>
