<UserControl x:Name="userControl" x:Class="CashManager_MVVM.Features.Common.ExtendedDatePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CashManager_MVVM.Features.Common"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="200"
             d:DataContext="{d:DesignInstance Type=local:ExtendedDatePickerViewModel, IsDesignTimeCreatable=True}">
    <UserControl.Resources>

        <ControlTemplate x:Key="RightArrowButton" TargetType="{x:Type Button}">
            <Grid>
                <Path Data="M 2 12 L 9 6 L 2 0 Z" Fill="{DynamicResource ControlBackgroundBrush}" Stretch="Fill" Stroke="{DynamicResource BorderBrush}" Height="25" Width="25" />
            </Grid>
        </ControlTemplate>
    </UserControl.Resources>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DatePicker Grid.Row="0" SelectedDate="{Binding SelectedValue, ElementName=userControl}" FirstDayOfWeek="Monday"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="test polygon" Template="{DynamicResource LeftArrowButton}" Command="{Binding SubtractYearCommand}"/>
            <Button Grid.Column="0" Content="test polygon" Template="{DynamicResource LeftArrowButton}" Command="{Binding SubtractMonthCommand}" Margin="20,0,0,0"/>
            <Button Grid.Column="0" Content="test polygon" Template="{DynamicResource LeftArrowButton}" Command="{Binding SubtractDayCommand}" Margin="40,0,0,0"/>
            <Button Grid.Column="1" Content="Placeholder"/>
            <StackPanel Grid.Column="2" Width="60" HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal">
                <Button Width="18" Content="test polygon" Template="{DynamicResource LeftArrowButton}" Command="{Binding SubtractYearCommand}"/>
                <Button Width="18" Content="test polygon" Template="{DynamicResource LeftArrowButton}" Command="{Binding SubtractMonthCommand}" />
                <Button Width="18" Content="test polygon" Template="{DynamicResource LeftArrowButton}" Command="{Binding SubtractDayCommand}" HorizontalAlignment="Left" />
            </StackPanel>

        </Grid>
    </Grid>
</UserControl>