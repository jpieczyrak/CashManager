<UserControl x:Name="exDatePicker" x:Class="CashManager_MVVM.Features.Common.ExtendedDatePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="200">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DatePicker Grid.Row="0" SelectedDate="{Binding SelectedValue, ElementName=exDatePicker}" FirstDayOfWeek="Monday"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Template="{DynamicResource LeftArrowButton}" Command="{Binding ViewModel.SubtractYearCommand, ElementName=exDatePicker}"/>
            <Button Grid.Column="0" Template="{DynamicResource LeftArrowButton}" Command="{Binding ViewModel.SubtractMonthCommand, ElementName=exDatePicker}" Margin="20,0,0,0"/>
            <Button Grid.Column="0" Template="{DynamicResource LeftArrowButton}" Command="{Binding ViewModel.SubtractDayCommand, ElementName=exDatePicker}" Margin="40,0,0,0"/>
            
            <Button Grid.Column="1" Content="Placeholder"/>

            <Button Grid.Column="2" Template="{DynamicResource RightArrowButton}" Command="{Binding ViewModel.AddYearCommand, ElementName=exDatePicker}"/>
            <Button Grid.Column="2" Template="{DynamicResource RightArrowButton}" Command="{Binding ViewModel.AddMonthCommand, ElementName=exDatePicker}" Margin="20,0,0,0"/>
            <Button Grid.Column="2" Template="{DynamicResource RightArrowButton}" Command="{Binding ViewModel.AddDayCommand, ElementName=exDatePicker}" Margin="40,0,0,0"/>
        </Grid>
    </Grid>
</UserControl>