<?xml version="1.0" encoding="utf-8"?>
<log4net>
  <root>
    <level value="ALL"/>
    <appender-ref ref="GeneralFileLogs"/>
    <appender-ref ref="Console"/>
  </root>

  <logger name="ErrorLogger" additivity="false">
    <appender-ref ref="ErrorFile"/>
    <level value="ERROR"/>
    <level value="FATAL"/>
  </logger>

  <appender name="ErrorFile" type="log4net.Appender.RollingFileAppender">
    <param name="File" value="Logs\Error.log"/>
    <param name="AppendToFile" value="true"/>
    <datePattern value="yyyyMMdd"/>
    <rollingStyle value="Date"/>
    <layout type="log4net.Layout.PatternLayout">
      <param name="ConversionPattern" value="%-5level %date{yyyy-MM-dd hh:mm:ss.fff} %-18logger{1} after [%timestamp ms] [%type{1}.%method @ %line] %message%n"/>
    </layout>
  </appender>

  <appender name="GeneralFileLogs" type="log4net.Appender.RollingFileAppender">
    <param name="File" value="Logs\General.log"/>
    <param name="AppendToFile" value="true"/>
    <datePattern value="yyyyMMdd"/>
    <rollingStyle value="Date"/>
    <layout type="log4net.Layout.PatternLayout">
      <param name="ConversionPattern" value="%-5level %date{yyyy-MM-dd hh:mm:ss.fff} %-18logger{1} %message%n"/>
    </layout>
  </appender>

  <appender name="Console" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <param name="ConversionPattern" value="%-5level %date{yyyy-MM-dd hh:mm:ss.fff} %-18logger{1} %message%n"/>
    </layout>
  </appender>

</log4net>
