<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CashManager_MVVM.Skins">

    <!-- Texts -->
    <Color x:Key="ForegroundColor">White</Color>
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}"/>

    <Color x:Key="DisabledForegroundColor">#aaaaaa</Color>
    <SolidColorBrush x:Key="DisabledForegroundBrush" Color="{StaticResource DisabledForegroundColor}" />

    <!-- Borders -->
    <Color x:Key="BorderColor">#cfcfcf</Color>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />

    <Color x:Key="DisabledBorderColor">#727272</Color>
    <SolidColorBrush x:Key="DisabledBorderBrush" Color="{StaticResource DisabledBorderColor}" />

    <Color x:Key="HoverBorderAccentOptionalColor">#da5e69</Color>
    <Color x:Key="HoverBorderAccentColor">#d12e27</Color>
    <SolidColorBrush x:Key="HoverBorderAccentBrush" Color="{StaticResource HoverBorderAccentColor}" />

    <!-- Backgrounds -->
    <Color x:Key="BackgroundAccentColor">#4c4c4c</Color>
    <Color x:Key="BackgroundMainColor">#FF161616</Color>
    <SolidColorBrush x:Key="BackgroundColorBrush" Color="{StaticResource BackgroundMainColor}"/>

    <LinearGradientBrush x:Key="ControlBackgroundBrush" EndPoint="0,1" StartPoint="0,0">
        <GradientStop Color="{StaticResource DisabledBorderColor}" Offset="0" />
        <GradientStop Color="{StaticResource BackgroundAccentColor}" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="DisabledControlBackgroundBrush" EndPoint="0,1" StartPoint="0,0">
        <GradientStop Color="{StaticResource ForegroundColor}" Offset="0" /> <!-- maybe it should be changed to sth light like f4f4f4 -->
        <GradientStop Color="{StaticResource BorderColor}" Offset="0.7" />
        <GradientStop Color="{StaticResource DisabledForegroundColor}" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="HoverControlBackgroundBrush" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="{StaticResource HoverBorderAccentOptionalColor}" Offset="0" />
        <GradientStop Color="{StaticResource HoverBorderAccentColor}" Offset="1" />
    </LinearGradientBrush>
    


    <Color x:Key="LightTextColor">White</Color>
    <SolidColorBrush x:Key="LightTextColorBrush" Color="{StaticResource LightTextColor}"/>

    <Color x:Key="GreyOutTextColor">#FF939393</Color>
    <SolidColorBrush x:Key="GreyOutTextColorBrush" Color="{StaticResource GreyOutTextColor}"/>

    <Color x:Key="BackgroundColor">#FF161616</Color>

    <Color x:Key="DeactivatedColor">#FF484848</Color>
    <SolidColorBrush x:Key="DeactivatedColorBrush" Color="{StaticResource DeactivatedColor}"/>

    <Color x:Key="AccentColor1">#FF756354</Color>
    <SolidColorBrush x:Key="AccentColor1Brush" Color="{StaticResource AccentColor1}"/>

    <Color x:Key="AccentColor2">#FF302317</Color>
    <SolidColorBrush x:Key="AccentColor2Brush" Color="{StaticResource AccentColor2}"/>

    <Color x:Key="AccentTextColor">#FFA35D00</Color>
    <SolidColorBrush x:Key="AccentTextColorBrush" Color="{StaticResource AccentTextColor}" />

</ResourceDictionary>