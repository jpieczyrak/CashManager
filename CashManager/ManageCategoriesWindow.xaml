<Window x:Class="CashManager.ManageCategoriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ManageCategoriesWindow" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="240*"/>
            <RowDefinition Height="29*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dataGridCategories" Margin="0,5" AutoGenerateColumns="False" CanUserAddRows="True" IsReadOnly="False" Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Value, Mode=TwoWay}" Width="100*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="buttonAccept" Content="Accept" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Click="buttonAccept_Click" Margin="0" Grid.Row="1" Grid.Column="1"/>
        <Button x:Name="buttonAddEmpty" Content="Add Empty" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Click="buttonAddEmpty_Click" Margin="0" Grid.Row="1"/>

    </Grid>
</Window>
