<Window x:Class="CashManager.TransactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="TransactionWindow" Height="600" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="120*"/>
            <ColumnDefinition Width="200*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="17*" MinHeight="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="23*" MinHeight="40"/>
            <RowDefinition Height="23*" MinHeight="40"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="145*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <!-- Labels setup -->
        <Label Content="Title" HorizontalAlignment="Left" Margin="0,2" VerticalAlignment="Center"/>
        <Label Content="Description" HorizontalAlignment="Left" Margin="0,4" Grid.Row="1" VerticalAlignment="Center"/>
        <Label Content="Date" HorizontalAlignment="Left" Margin="0,2" Grid.Row="2" VerticalAlignment="Center"/>
        <Label Content="Sources" HorizontalAlignment="Left" Margin="0,10" Grid.Row="3" VerticalAlignment="Center"/>
        <Label Content="Targets" HorizontalAlignment="Left" Margin="0,10" Grid.Row="4" VerticalAlignment="Center"/>
        <Label Content="Contribution" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" Grid.Column="0"/>
        <Label Content="Subtransactions" HorizontalAlignment="Center" Margin="86,0,149,0" Grid.Row="6" VerticalAlignment="Center" Grid.ColumnSpan="2" Grid.Column="1"/>

        <!-- Buttons -->
        <Button x:Name="buttonOK" Content="OK" HorizontalAlignment="Center" Margin="48,5,49,5" Grid.Row="8" VerticalAlignment="Center" Width="100" Click="buttonOK_Click" Grid.ColumnSpan="2" Height="25"/>
        <Button x:Name="buttonCancel" Content="Cancel" Grid.Column="2" HorizontalAlignment="Center" Margin="47,5,48,5" Grid.Row="8" VerticalAlignment="Center" Width="100" Click="buttonCancel_Click" Height="25"/>

        <TextBox x:Name="textBoxTitle" Grid.Column="1" Height="22" TextWrapping="Wrap" VerticalAlignment="Center" Margin="0,5" Grid.ColumnSpan="2"/>
        <TextBox x:Name="textBoxDescription" Grid.Column="1" Height="24" TextWrapping="Wrap" VerticalAlignment="Center" Margin="0,5" Grid.Row="1" Grid.ColumnSpan="2"/>

        <xctk:DateTimePicker Grid.Column="1" Margin="0,5" Grid.Row="2" VerticalAlignment="Center" Format="Custom" CultureInfo="pl" FormatString="dd-MM-yyyy HH:mm" Grid.ColumnSpan="2" Height="20" />

        <DataGrid x:Name="dataGridSources" Margin="0,5" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridComboBoxColumn Header="SourceStocks" ItemsSource="{Binding SourceStocks}"/>
                <DataGridTextColumn Header="Value" Binding="{Binding Value}"/>
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid x:Name="dataGridTargets" Margin="0,5" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2">

        </DataGrid>

        <ComboBox x:Name="comboBoxContributionTypes" Grid.Column="1" HorizontalAlignment="Left" Margin="0,0,5,0" Grid.Row="5" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBoxContributionValue" Grid.Column="2" Height="24" VerticalAlignment="Center" Margin="5,0,0,0" Grid.Row="5"/>


        <DataGrid x:Name="dataGridSubtransactions" Margin="5" Grid.ColumnSpan="3" Grid.Row="6" Grid.RowSpan="2" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}"/>
                <DataGridTextColumn Header="Value" Binding="{Binding Value}"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category}"/>
                <DataGridTextColumn Header="Tags" Binding="{Binding Tags}"/>
            </DataGrid.Columns>
        </DataGrid>
   </Grid>
</Window>
